@model IEnumerable<QLThuVien.Models.CTPM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="mt-4">Thống Kê</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Home">Trang chủ</a></li>
        <li class="breadcrumb-item active">Thống kê</li>
    </ol>
    <div class="row mtbox" style="padding-left: 100px" >
        <div class="col-md-2 col-sm-2 col-md-offset-1 box0">
            <div class="box1">
                <a href="/ThongKe/Index1">
                    <img src="https://img.icons8.com/carbon-copy/64/000000/book.png" />
                </a>
            </div>
            <p>Có @ViewBag.SoLuongSach đầu sách</p>
        </div>

        <div class="col-md-2 col-sm-2 box0">
            <div class="box1">
                <a href="/ThongKe/Index2">
                    <img src="https://img.icons8.com/dusk/64/000000/reading.png" />
                </a>
            </div>
            <p>Có @ViewBag.SoLuongDocGia độc giả</p>
        </div>
        <div class="col-md-2 col-sm-2 box0">
            <div class="box1">
                <a href="/ThongKe/Index3">
                    <img src="https://img.icons8.com/dusk/64/000000/borrow-book.png" />
                </a>
            </div>
            <p>Có @ViewBag.SoLuongPhieuMuon phiếu mượn</p>
        </div>

        <div class="col-md-2 col-sm-2 box0">
                <div class="box1">
                    <a href="/ThongKe/Index5">
                        <img src="https://img.icons8.com/wired/64/000000/return-book.png" />
                    </a>
                </div>
                <p>Có @ViewBag.SoLuongPhieuChuaTra phiếu chưa trả</p>
            </div>

        <div class="col-md-2 col-sm-2 box0">
            <div class="box1">
                <a href="/ThongKe/Index4">
                    <img src="https://img.icons8.com/dusk/64/000000/return-book.png" />
                </a>
            </div>
            <p>Có @ViewBag.SoLuongPhieuTra phiếu trả</p>
        </div>
    </div>

        <div class="card mb-4">
            <div class="card-header"><i class="fas fa-table mr-1"></i>Phiếu trả</div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                         
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.MaPM)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MaSach)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.NgayTra)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TinhTrangSach)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TinhTrangTra)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.User)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.GhiChu)
                                </th>
                                
                               
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MaPM)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MaSach)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NgayTra)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TinhTrangSach)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TinhTrangTra)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.User)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.GhiChu)
                                    </td>
                                    
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>




