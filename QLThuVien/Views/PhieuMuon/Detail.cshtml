@model QLThuVien.Models.PhieuMuon

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">
    <h1 class="mt-4">Chi tiết Phiếu mượn</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Home">Trang chủ</a></li>
        <li class="breadcrumb-item active">Chi tiết Phiếu mượn</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <a class="btn btn-success" asp-action="Index" asp-controller="PhieuMuon">Về danh sách Phiếu mượn</a>
        </div>

        <div>
            <h4>Chi tiết Phiếu mượn @Html.DisplayFor(model => model.MaPM)</h4>
            <hr />
            <dl class="row" style="padding-left: 5px;">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.MaPM)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.MaPM)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.MaDG)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.MaDG)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.NgayMuon)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.NgayMuon)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.NgayHenTra)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.NgayHenTra)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.SoLuongMuon)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.SoLuongMuon)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.User)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.User)
                </dd>
            </dl>
            <div style="margin-left: 10px; margin-bottom: 10px;"> 
                <button class="btn-outline-success" onclick="myfunction()" >In PDF</button>
            </div>
            
            <script>
                function myfunction() {

                    var doc = new jsPDF()
                    var h1 = document.querySelector('#data')
                    doc.fromHTML(h1, 15, 15)
                    doc.save("output.pdf")
                }
            </script>
            <src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.5.3/jspdf.min.js"></script>
        </div>
        </div>
    </div>
</div>
